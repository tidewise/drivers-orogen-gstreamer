    "version": "0.2.0",
    "configurations": [
        {
            "type": "Ruby",
            "request": "launch",
            "name": "TEMP - syskit test",
            "program": "${rock:which:syskit}",
            "args": [
                "test", "--live", "${workspaceRoot}/test/timestamp_test.rb",
            ],
            "cwd": "${workspaceRoot}/build/bundle"
        },
        {
            "type": "orogen",
            "request": "launch",
            "name": "(drivers/orogen/gstreamer) ball_source",
            "deploy": "gstreamer::Task",
            "deployAs": "ball_source"
        },
        {
            "type": "orogen",
            "request": "launch",
            "name": "(drivers/orogen/gstreamer) unit test - generator",
            "deploy": "gstreamer::Task",
            "deployAs": "generator"
        },

    ]
}